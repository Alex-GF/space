{
  "name": "space-api",
  "version": "0.1.0",
  "description": "SPACE API is an open-source project designed to provide a robust and scalable API for various applications.",
  "main": "src/main/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx src/main/index.ts",
    "dev:setup": "cd docker/dev && docker compose up -d --build",
    "dev:setup:test": "pnpm run generate-test-env && pnpm run dev:setup",
    "test": "chmod +x run-tests.sh && ./run-tests.sh",
    "test:ci": "chmod +x run-tests:ci.sh && ./run-tests:ci.sh",
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "generate-test-env": "chmod +x generate-test-env.sh && ./generate-test-env.sh"
  },
  "keywords": [
    "api",
    "open-source",
    "space",
    "nodejs",
    "typescript",
    "pricing",
    "pricing-driven self-adaptation"
  ],
  "author": "ISA Group <agarcia29@us.es>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alex-GF/space-api.git"
  },
  "bugs": {
    "url": "https://github.com/Alex-GF/space-api/issues"
  },
  "homepage": "https://github.com/Alex-GF/space-api#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^1.4.12",
    "awilix": "^12.0.5",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jose": "^6.0.11",
    "js-yaml": "^4.1.0",
    "mongo-seeding": "^4.0.2",
    "mongoose": "^8.14.0",
    "multer": "1.4.5-lts.2",
    "node-fetch": "^3.3.2",
    "pricing4ts": "^0.10.0",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@types/express": "^4.17.17",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.1.2",
    "dotenv": "^16.5.0",
    "jiti": "^2.4.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.31.0",
    "vitest": "^3.1.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
